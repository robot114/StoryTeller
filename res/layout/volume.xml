<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_margin"
    android:background="@drawable/popup"
    android:orientation="vertical"
    android:padding="@dimen/defaultPadding" >

    <TextView
        android:id="@+id/textViewVolumeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/default_margin" >

        <ImageView
            android:id="@+id/imageViewVolumeDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/volume_down" />

        <SeekBar
            android:id="@+id/seekBarVolume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_weight="1"
            android:max="15"
            android:progress="1"
            android:progressDrawable="@layout/volume_seekbar"
            android:thumb="@drawable/volume_thumb" />

        <ImageView
            android:id="@+id/imageViewVolumeUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/volume_up" />
    </LinearLayout>

</LinearLayout>